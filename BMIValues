#include <stdio.h>

int main ()
{
	int integer1;
	int integer2;

	printf( "Please enter your weight it in pounds" );
	scanf( "%d", &integer1 );

	printf( "Please enter your height in inches" );
	scanf( "%d", &integer2 );

	int bmi;
	bmi = (( integer1 * 703 ) / ( integer2 * integer2 )) + ((integer1 * 703 ) % ( integer2 * integer2 ));

	printf( "Your BMI is %d\n", bmi );
	printf ( "BMI VALUES\n Underweight: less than 18.5\n Normal: between 18.5 and 24.9\n Overweight: between 25 and 29.9\n Obese: 30 or greater\n" );

}
